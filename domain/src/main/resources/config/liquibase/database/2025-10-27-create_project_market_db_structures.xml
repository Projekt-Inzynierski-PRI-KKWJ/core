<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                                       http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!-- ============================ -->
    <!--Create project_market table -->
    <!-- ============================ -->
    <changeSet id="1-create-project-market" author="developer">
        <createTable tableName="project_market">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="supervisor_id" type="BIGINT"/>
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE"/>
            <column name="published_at" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
            <column name="closed_at" type="TIMESTAMP"/>
            <column name="description_override" type="VARCHAR(2000)"/>
            <column name="max_members" type="INTEGER"/>
            <column name="creation_date" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
            <column name="modification_date" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
            <column name="version" type="BIGINT" defaultValueNumeric="1"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="project_market"
                                 baseColumnNames="project_id"
                                 referencedTableName="project"
                                 referencedColumnNames="id"
                                 constraintName="fk_project_market_project"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="project_market"
                                 baseColumnNames="supervisor_id"
                                 referencedTableName="supervisor"
                                 referencedColumnNames="id"
                                 constraintName="fk_project_market_supervisor"/>
    </changeSet>

    <!-- ============================ -->
    <!-- Create project_application table -->
    <!-- ============================ -->
    <changeSet id="2-create-project-application" author="system">
        <createTable tableName="project_application">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_market_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="student_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="PENDING"/>
            <column name="message" type="VARCHAR(2000)"/>
            <column name="creation_date" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
            <column name="modification_date" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
            <column name="version" type="BIGINT" defaultValueNumeric="1"/>
            <column name="decision_date" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="project_application"
                                 baseColumnNames="project_market_id"
                                 referencedTableName="project_market"
                                 referencedColumnNames="id"
                                 constraintName="fk_project_application_market"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="project_application"
                                 baseColumnNames="student_id"
                                 referencedTableName="student"
                                 referencedColumnNames="id"
                                 constraintName="fk_project_application_student"
                                 onDelete="CASCADE"/>

        <addUniqueConstraint tableName="project_application"
                             columnNames="project_market_id,student_id"
                             constraintName="uq_project_application"/>
    </changeSet>
</databaseChangeLog>

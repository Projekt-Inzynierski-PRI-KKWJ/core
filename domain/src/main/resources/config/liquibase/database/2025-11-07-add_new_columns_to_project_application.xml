    <changeSet id="add-new-columns-to-project-application" author="developer">
        <dropColumn tableName="project_application">
            <column name="message" type="VARCHAR(2000)"/>
        </dropColumn>

        <addColumn tableName="project_application">
            <column name="contact_data" type="VARCHAR(2000)"/>
        </addColumn>

        <addColumn tableName="project_application">
            <column name="skills" type="VARCHAR(2000)"/>
        </addColumn>

        <addColumn tableName="project_application">
            <column name="other_information" type="VARCHAR(2000)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
